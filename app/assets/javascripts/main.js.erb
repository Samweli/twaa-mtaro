  function bindInfoWindowLink(id, url, options) {
    $('#'+id).live('click', function() {
      $.ajax({
        type: options['type'],
        url: url,
        data: options['data'],
        beforeSend: function() {
          if (options['showIW'] == true) {
            isWindowOpen = true;
            activeInfoWindow.open(map);
            showInfoWindow();
          } else {
            hideInfoWindow();
            showSpinner();
          }
        },
        error: function(jqXHR) {
          hideSpinner();
          showInfoWindow;
        },
        success: function(data) {
          activeInfoWindow.setContent(data);
        }
      });
      return false;
    });
  }
  
  
  
  
  
