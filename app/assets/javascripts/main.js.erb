    function addLegend() {
        var legend = L.control({position: 'topright'});

        legend.onAdd = function (map) {

            var locale = urlParam('locale');
            var colour_map;
            var div;

            if (locale == 'sw') {
                colour_map = {
                    'Misafi': "green", 'Michafu': "#dd9031", 'Msaada': '#6495ed',
                    'Haijulikani': "#CB7D50"
                }

