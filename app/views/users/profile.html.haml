#profile_detail
	- if user_signed_in?
		.user_profile
			#user_profile

				%p#profile_picture
					= current_user.profile_name
		
				%h3{:style => "text-align:center;text-transform: capitalize;color: #666"} 
					= current_user.fullname
				.details
					%p
						= current_user.email
					%p
						= current_user.sms_number

					- if current_user.organization?
						%p
							= t("captions.organization")
							= current_user.organization
					- else
					%p
						= render :partial => 'users/edit_profile'	
	- else





