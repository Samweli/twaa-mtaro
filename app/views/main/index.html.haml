#sidebar
  = image_tag "logos/asw_logo.png", :alt => t("titles.main", :thing => t("defaults.thing").titleize), :title => t("titles.main", :thing => t("defaults.thing").titleize)
  
  - if user_signed_in?
    #user_badge.font_1.link_1
      Welcome
      = current_user.fullname
      [
      = link_to t("links.sign_out"), destroy_user_session_path, :id => 'sign_out_link_main'
      ]
      
  = render :partial => 'address_form'

  #info_box
    - flash.each do |key, message|
      %div{:id => key}
        = message

  #scrollup.font_1
    %div.headline
      "Adopt-a-sidewalk" near your home by "claiming" it on a map.
      %br
      %br
      By doing this, you let neighbors know you can help clear snow.
    %div.headline
      You can see at-a-glance which sidewalks are claimed and connect with your less-abled neighbors to help keep their sidewalks clear.
    %div.headline
      You can enlist your friends to help on Facebook and Twitter.
    %div.headline
      To sign up for our text messaging service, text the word "Chicago" to "311311" for all major cell phone carriers.
      %br
      %br
      Message and data rates may apply.
    %div.headline
      = image_tag "logos/ChicagoShovelsHOME.jpg"
    %div.headline
      = image_tag "logos/SignUpSMSAlerts.jpg"
    
  #register
    %p#register-text
      
    #register-dialog{:class => "dialog"}
      = form_for :user, :html => {:id => "register_form"} do |f|
        = label_tag "first_name", "First name"
        = text_field_tag "first_name", params[:first_name]
        = label_tag "last_name", "Last name"
        = text_field_tag "last_name", params[:last_name]
        = label_tag "email", "Email address"
        = text_field_tag "email", params[:email]
        = label_tag "password", "Password"
        = text_field_tag "password", params[:password]
        = submit_tag t("buttons.register")
      #register-fb
        %fb:login-button{:length => "long", :perms => "email", :onlogin => ""}
    #login-dialog{:class => "dialog"}
      = form_for :user, :html => {:id => "login_form"} do |f|
        = label_tag "email", "Email address"
        = text_field_tag "email", params[:email]
        = label_tag "password", "Password"
        = text_field_tag "password", params[:password]
        = submit_tag t("buttons.sign_in")
      #login-fb
        %fb:login-button{:length => "long", :perms => "email", :onlogin => ""}
  #social
    = render :partial => 'facebook_button'
    = render :partial => 'gplus_button'
    = render :partial => 'twitter_button'
    
  #osw_widget
  #feedback
    = link_to t("links.terms"), '/tos'

