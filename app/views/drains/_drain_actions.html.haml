- if current_user.street.drains.include? @drain
  %div
  %ul.horizontal_items
    %li{:id => "help", :data => {:moid=>@drain.try(:gid)}}
      = button_tag t("captions.need_help"), :class => "btn btn-primary cat-btn"
    %li
      = render :partial => 'drains/flood_prone_button'
    %li{:id => "unclean", :data => {:moid=>@drain.try(:gid)}}
      = button_tag t("captions.unclean"), :class => "btn btn-warning cat-btn"
    %li{ :id => "clean", :data => {:moid=>@drain.try(:gid)}}
      = button_tag t("captions.clean"), :class => "btn btn-success cat-btn"
    - if @claims.empty?
      %button#assign.btn.info_adopt
        = t("buttons.adopt")
    - else
      %button#add_claim.btn.info_adopt
        = t("captions.add")
- else
  = render :partial => 'streets/add_drain'